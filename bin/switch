#!/bin/sh

peri=("Casque USB Plantronics" "Enceintes Genius" "Casque Blutooth Audio Technica")

sinks=(alsa_output.usb-Plantronics_Plantronics_HD1-00.iec958-stereo alsa_output.pci-0000_00_1f.3.analog-stereo bluez_sink.C4_45_67_0D_3D_75.a2dp_sink)

input=$(pactl list sink-inputs | head -n1 | sed 's/.*#\(.*\)/\1/')

echo $input
pactl move-sink-input $input ${sinks[$1]}
notify-send "Bascule !" "La destination du flux revient au(x) ${peri[$1]} !"

exit 0
